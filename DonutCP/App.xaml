             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DonutCP"
             StartupUri="View/Windows/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme/Colors.xaml" />
                <ResourceDictionary Source="Theme/ButtonLogin.xaml"/>
                <ResourceDictionary Source="Theme/MenuButton.xaml" />
                <ResourceDictionary Source="Theme/TextBox.xaml" />
                <ResourceDictionary Source="Theme/MainTopButtons.xaml"/>
                <ResourceDictionary Source="Theme/Fonts.xaml" />
                <ResourceDictionary Source="Theme/Icons.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>