<UserControl x:Class="DonutCP.Services.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DonutCP.Services"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Name="PasswordWindow">
    <Grid>
        <PasswordBox x:Name="passwordBox" 
                     PasswordChanged="PasswordBox_PasswordChanged" 
                     GotFocus="passwordBox_GotFocus"  
                     LostFocus="passwordBox_LostFocus"/>
        <TextBlock x:Name="passBoxPlaceholder" Grid.Row="2" 
                             Margin="0,0,-5,0" 
                   Width="235px"
                   IsHitTestVisible="False" 
                   VerticalAlignment="Center"
                   FontSize="18"
                   Background="Transparent"
                   Foreground="{StaticResource BaseTextBrush}"
                   Text="{Binding Placeholder, ElementName=PasswordWindow}"/>
    </Grid>
</UserControl>
